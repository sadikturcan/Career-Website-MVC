            {


                <input style="display:inline-block;" type="file" name="file" />
                <br />
                <input style="display:inline-block;"type="submit" value="Özgeçmiş Ekle" />


            }
        </div>*@



    <div class="modal" id="Modal1">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Özgeçmiş Ekle</h2>
                    @using (Html.BeginForm("FileUpload", "User", FormMethod.Post, new { enctype = "multipart/form-data"}))
                    {
                        <div class="modal-body">


                            <input style="display: inline-block;" type="file" size="10" id="file" name="file">
                            <input style="display: inline-block;" class="btn btn-primary" type="submit" value="Ekle">

                            @*<input style="display: inline-block;" type="file" size="10" id="myFile" name="file">
                                <input style="display: inline-block;" class="btn btn-primary" type="submit" value="Ekle">*@

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="Modal2">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Özgeçmiş Ekle</h2>
                    @using (Html.BeginForm("ImageUpload", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="modal-body">


                            <input style="display: inline-block;" type="file" size="10" id="file" name="file">
                            <input style="display: inline-block;" class="btn btn-primary" type="submit" value="Ekle">



                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    

    




</body>

</html>



