@using IntProgFinalProject.Models.Entity


@model List<TBLAPPLICATIONS>
@{
    ViewBag.Title = "Basvurularim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/Scripts/jquery-3.6.0.js"></script>
<h1 style="text-align:center;">Başvurularım</h1>
<hr style="height:2px;border-width:0;color:gray;background-color:gray">

    <table class="table table-bordered">
        <tr>

            <th>İlan Başlığı</th>
            <th>İlan Tipi</th>
            <th>İlan Sahibi</th>
            <th>İlan Hakkında</th>
            <th>Başvuru Sonucu</th>


        </tr>
        <tbody>

            @foreach (var bsvr in Model)
            {


                <tr>
                    <td>@bsvr.TBLJOBOPENINGS.Header</td>
                    <td>@bsvr.TBLJOBOPENINGS.Category</td>
                    <td>@bsvr.TBLJOBOPENINGS.TBLCOMPANIES.Name</td>
                    <td>@bsvr.TBLJOBOPENINGS.About</td>

                    <td><button  id="status" style="border-radius:24px;" disabled type="button" value="@bsvr.Applicationstatus"></button></td>





                </tr>

                
            }

        </tbody>
    </table>

    <script>
        appstatus = document.getElementById('status');
        console.log(appstatus.value);
        

        if (appstatus.value == 0) {
            appstatus.style.backgroundColor = "gray";
            appstatus.innerHTML = "Başvuru Cevap Bekleniyor";
        }
        if (appstatus.value == 1) {
            appstatus.style.backgroundColor = "#47D149";
            appstatus.innerHTML = "Başvuru Onaylandı";
        }
        if (appstatus.value == -1) {
            appstatus.style.backgroundColor = "#DF432E";
            appstatus.innerHTML = "Başvuru Sonucu Olumsuz";
            }

        


    </script>
