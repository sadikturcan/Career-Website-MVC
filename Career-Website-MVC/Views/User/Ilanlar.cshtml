@using IntProgFinalProject.Models.Entity
@model List<TBLJOBOPENINGS>
@{
    ViewBag.Title = "Ilanlar";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<!DOCTYPE html>
<html>

<head>

    <style>
        input[type=text] {
            height: 40px;
            padding: 12px 20px;
            margin: 8px 0;
            margin-left: 40px;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        #subbtn {
            background-color: #062e51;
            color: white;
            padding: 11px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 120%;
        }

        .search_categories .select {
            width: 120%;
        }

            .search_categories .select select {
                background: transparent;
                line-height: 1;
                border: 1px solid #ccc;
                padding: 12px 20px;
                border-radius: 0;
                margin: 8px 0;
                height: 50px;
                position: relative;
                z-index: 10;
                font-size: 1em;
            }
    </style>

</head>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <h1 style="text-align:center;">İlanlar Listesi</h1>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div style="position:absolute;left:10px">
        @using (Html.BeginForm("Ilanlar", "User", FormMethod.Get))
        {
            <p>


                İlan Adı: @Html.TextBox("hdr")

            </p>

            <fieldset>

                @*İlan Kategorisi: <select id="ctgr" name="ctgr">

                    <option value="staj">Staj İlanları </option>
                    <option value="part-time">Part Time İş İlanları</option>
                    <option value="full-time">Full Time İş İlanları</option>

                </select>*@

                <div class="search_categories">
                    <div class="select">
                        İlan Kategorisi:  <select name="ctgr" id="ctgr">

                            <option value=""></option>
                            <option value="staj">Staj İlanları </option>
                            <option value="part-time">Part Time İş İlanları</option>
                            <option value="full-time">Full Time İş İlanları</option>
                        </select>
                    </div>
                </div>

            </fieldset>


            <hr />


            <input id="subbtn" onclick="sorgu();" type="submit" value="Filtrele" class="btn-primary " />

           

        }
    </div>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div style="border:1px solid gray" class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">

                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 id="header" style="margin-left:60px" class="lead"><b> @item.Header</b></h2>
                                            <div class="col-5 text-center">
                                                <img src="~/img/job.jpg" alt="" class="img-rounded" style="height:250px; width:250px;">
                                            </div>
                                            <br />
                                            <ul style=" list-style-type: none; margin-left:20px" class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span><p style="color:black;">@item.TBLCOMPANIES.Name</p></li>
                                                <hr />
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span><p style="color:black;">@item.Category</p></li>
                                                <hr />
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span><p style="color:black;">@item.TBLCOMPANIES.Sector</p></li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">

                                        <a href="/User/Ilandetay/@item.ID" style="border-radius:25px; margin-right:30px" class="btn btn-sm btn-group btn-success">
                                            <i class="fas fa-user"></i> Detay Görüntüle
                                        </a>
                                    </div>

                                </div>

                            </div>
                        </div>



                    }


                </div>

            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->

   
</body>
</html>

